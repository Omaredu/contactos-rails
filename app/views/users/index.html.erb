<div>
  <h1 class="font-bold text-4xl">Mis Contactos</h1>
  <div class="border-b border-slate-200 flex items-center gap-5 py-5">
    <p class="text-sm text-slate-400">Tienes <%= @users.count %> contacto(s)</p>
    <%=
      link_to "Agregar Contacto",
              new_user_path,
              class:
                "border-2 border-blue-500 text-blue-500 py-2 px-4 rounded-md transition hover:bg-blue-500 hover:text-white"
    %>
  </div>
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>
