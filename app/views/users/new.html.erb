<div>
  <h1 class="font-bold text-4xl">Nuevo Contacto</h1>
  <%= form_for @user do |f| %>
    <div class="mb-4 mt-5">
      <%= f.label :username %>
      <%= f.text_field :username, class: "border border-gray-200 p-2 rounded w-full" %>
    </div>
    <div class="mb-4">
      <%= f.label :email %>
      <%= f.email_field :email, class: "border border-slate-200 p-2 rounded w-full" %>
    </div>
    <div class="mb-4">
      <%= f.label :phone %>
      <%= f.phone_field :phone, class: "border border-gray-200 p-2 rounded w-full" %>
    </div>
    <div class="mb-4 flex gap-5 items-center">
      <%=
          link_to "Volver a Contactos",
                  root_path,
                  class:
                    "text-slate-400 py-2 hover:text-slate-500 hover:underline text-sm"
      %>
      <%= f.submit "Crear Contacto",
          class:
            "border-2 border-blue-500 text-blue-500 py-2 px-4 rounded-md transition hover:bg-blue-500 hover:text-white cursor-pointer" %>
    </div>
  <% end %>
</div>
